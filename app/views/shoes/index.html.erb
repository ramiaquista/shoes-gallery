


<div class="row">
  <div class="col-sm-6">
    <h1>Shoes</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_shoe_path, class: 'btn btn-primary' do %>
    Add New Shoe
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Model</th>
            <th>Edition</th>
            <th>Year</th>
            <th>Color</th>
            
      </tr>
    </thead>

    <tbody>
      <% @shoes.each do |shoe| %>
        <%= content_tag :tr, id: dom_id(shoe), class: dom_class(shoe) do %>
          
            <td><%= link_to shoe.name, shoe %></td>
          

                      <td><%= shoe.model %></td>
                      <td><%= shoe.edition %></td>
                      <td><%= shoe.year %></td>
                      <td><%= shoe.color %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
